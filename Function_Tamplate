#include <iostream>
using namespace std;

template <class T>
T maximum(T value1, T value2, T value3)
{
	T max = value1;

	if (value2 > max)
		max = value2;
	if (value3 > max)
		max = value3;

	return max;
}

int main()
{ 
	int int1, int2, int3;
	cout << "Enter three integer numbers: ";
	cin >> int1 >> int2 >> int3;
	cout << "Maximal integer number is: "
		<< maximum(int1, int2, int3);	

	double double1, double2, double3;
	cout << endl << "Enter three double numbers: ";
	cin >> double1 >> double2 >> double3;
	cout << "Maximal double number is: "
		<< maximum(double1, double2, double3);

	char char1, char2, char3;
	cout << endl << "Enter three char numbers: ";
	cin >> char1 >> char2 >> char3;
	cout << "Maximal char number is: "
		<< maximum(char1, char2, char3) << endl;

	system("pause");
	return 0;
}
